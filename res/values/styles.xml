<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textColor">#444</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
    <!-- 详细新闻字体大小对话框 -->
    <style name="text_size_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
         <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
 
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>
    
     <!-- 腾讯微博授权弹出框 -->
    <style name="verify_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- 详细新闻功能按钮容器 -->
    <style name="news_detail_contaler">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    
    <!-- 详细新闻功能按钮 -->
    <style name="news_detail_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <!-- 今日快报版面新闻栏目容器 -->
    <style name="news_brand_layout">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <!-- 今日快报版面新闻栏目名称-->
    <style name="news_brand_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/fifteen_size</item>
    </style>
    
    <!-- 修改用户信息输入容器 -->
    <style name="modify_user_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">7dp</item>
    </style>
    
    <!-- 修改用户信息输入标签 -->
    <style name="modify_user_label">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>
	</style>    
	
     <!-- 修改用户信息输入框-->
    <style name="modify_user_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
	</style>   
	
    
</resources>