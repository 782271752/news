<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_item_bg"
    android:orientation="vertical" >

    <!-- 分隔线 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp" >

        <TextView
            android:id="@+id/id_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="time" />

        <TextView
            android:id="@+id/id_comment_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="user"
            android:textColor="@color/red"
            android:textSize="@dimen/fourteen_size" />

        <TextView
            android:id="@+id/id_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/id_comment_user_name"
            android:layout_marginTop="5dp"
            android:text="content"
            android:textColor="@color/black"
            android:textSize="@dimen/fourteen_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/reply_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- 分隔线 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#E4E4E4" />

</LinearLayout>