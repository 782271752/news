<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ede8e7"
    android:paddingBottom="20dip" >

    <LinearLayout
        android:id="@+id/id_weibo_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/content_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_text_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:text="X月X日X时X分"
            android:textColor="#636363"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_reposts_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="转发"
            android:textColor="#000000"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/id_weibo_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:paddingBottom="5dip"
            android:paddingTop="5dip"
            android:text=""
            android:textColor="#636363"
            android:textSize="12sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#E2DFE0" />

        <ImageView
            android:id="@+id/id_weiboimage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f5"
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="10dip" >

            <TextView
                android:id="@+id/id_retweeted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/retweeted"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:text="  9  "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/id_reposts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/reposts"
                android:text="  9  "
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>