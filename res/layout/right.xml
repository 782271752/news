<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginRight="50dp"
    android:background="#242424"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/right_zhanghu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginRight="15dip"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_radio_dj"
            android:id="@+id/head_view" />
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="10dip"
		            android:text="登录账号" 
		            android:textSize="20dip"
		            android:textColor="#ffffff"/>
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_vertical"
		            android:layout_marginLeft="10dip"
		            android:text="可访问授权栏目等" 
		            android:textColor="#ffffff"/>
		</LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/right_outline"
        android:layout_width="217dip"
        android:layout_height="48dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/btn_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dip"
        android:text="离线下载"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/msg_push"
        android:layout_width="217dip"
        android:layout_height="48dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/btn_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dip"
        android:text="消息记录"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/right_shouc"
        android:layout_width="217dip"
        android:layout_height="48dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/btn_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dip"
        android:text="收藏"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/right_setting"
        android:layout_width="217dip"
        android:layout_height="48dip"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/btn_right"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dip"
        android:text="设置"
        android:textColor="#ffffff" />

</LinearLayout>